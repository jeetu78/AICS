{require_otp_vsn, "R15B03"}.

{erl_opts,
    [
        debug_info,
        inline_list_funcs,
        warn_deprecated_function,
        warn_export_all,
        warn_export_vars,
        warn_obsolete_guard,
        warn_shadow_vars,
        nowarn_untyped_record,
        warn_unused_function,
        nowarn_unused_function,
        warnings_as_errors
    ]
}.

{lib_dirs, ["apps", "libs"]}.
{sub_dirs,
    [
        "apps/ea_aics_core",
        "apps/ea_aics_rest"
    ]
}.

{deps,
    [
        {rebar_vsn_plugin,      ".*",   {git, "https://github.com/erlware/rebar_vsn_plugin.git",    {tag, "v0.0.4"}}},
        {echo_rebar_plugins,    ".*",   {git, "https://github.com/EchoTeam/rebar-plugins.git"}},
        {meck,                  ".*",   {git, "https://github.com/eproxus/meck.git",                {tag, "0.8.2"}}},
        {yaws,                  ".*",   {git, "https://github.com/klacke/yaws.git",                 {tag, "yaws-1.95"}}},
        {jsx,                   ".*",   {git, "https://github.com/talentdeficit/jsx.git",           {tag, "v2.0.2"}}}
    ]
}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{plugins, [rebar_vsn_plugin, rebar_genappup_plugin]}.